<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:viewBindingIgnore="true">

        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="455dp"
            android:adjustViewBounds="false"
            android:background="#376EB6"
            android:scaleType="fitCenter"
            tools:viewBindingIgnore="true"/>

        <ImageView
            android:id="@+id/eclipse"
            android:layout_width="120dp"
            android:layout_height="103dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/eclipse"
            tools:viewBindingIgnore="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:viewBindingIgnore="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                tools:viewBindingIgnore="true">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-10dp"
                    android:backgroundTint="@android:color/transparent"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

                <TextView
                    android:id="@+id/antrian_tittle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/title_antrian"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:viewBindingIgnore="true"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/carousel"
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="15dp"
                tools:viewBindingIgnore="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    tools:viewBindingIgnore="true">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="260dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/logo_rsmm_full"
                        tools:viewBindingIgnore="true"/>

                    <TextView
                        android:id="@+id/waktu_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/txt_tanggal"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        tools:viewBindingIgnore="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:viewBindingIgnore="true">

                        <TextView
                            android:id="@+id/tv_tanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/waktu"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_jam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_format_jam"
                            android:layout_marginStart="25dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/poliklinik_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/title_poliklinik"
                        android:textSize="12sp"
                        tools:viewBindingIgnore="true"/>

                    <TextView
                        android:id="@+id/tv_tiket_poliklinik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/poliklinik"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/debitur_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/title_debitur"
                        android:textSize="12sp"
                        tools:viewBindingIgnore="true"/>

                    <TextView
                        android:id="@+id/tv_tiket_debitur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/debitur"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/antrian_anda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/antrian_anda"
                        android:textSize="12sp"
                        tools:viewBindingIgnore="true"/>

                    <TextView
                        android:id="@+id/tv_tiket_antrian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nomor_anda"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/dotted"/>

                    <TextView
                        android:id="@+id/saat_ini"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/antrian_saat_ini"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="18sp"
                        tools:viewBindingIgnore="true"/>

                    <TextView
                        android:id="@+id/tv_tiket_antrian_sekarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nomor_saat_ini"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#000000"
                        android:textSize="40sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/antrian"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:padding="20dp"
                app:cardCornerRadius="10dp"
                tools:viewBindingIgnore="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        app:srcCompat="@drawable/ic_baseline_pending_actions_24" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_dokter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/desc"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

<!--                        <TextView-->
<!--                            android:id="@+id/tv_poliklinik"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/poliklinik"-->
<!--                            android:fontFamily="@font/poppins_medium"-->
<!--                            android:textSize="14sp"-->
<!--                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>-->

<!--                        <TextView-->
<!--                            android:id="@+id/debitur"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/debitur"-->
<!--                            android:fontFamily="@font/poppins_medium"-->
<!--                            android:textSize="14sp"-->
<!--                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />-->

<!--                        <TextView-->
<!--                            android:id="@+id/waktu"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/waktu"-->
<!--                            android:fontFamily="@font/poppins_medium"-->
<!--                            android:textSize="12sp"-->
<!--                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />-->

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</ScrollView>